/* pages/ShopBusinessInfo/ShopBusinessInfo.wxss */
.header{
    text-align: center;
}
.header .head-box{
    position: relative;
}
.header .head-box::before{
    content: '';
    display: block;
    width: 100%;
    height: 190rpx;
    background: url(https://sp.lion-mall.com/miniprogram/images/business-info.png) no-repeat center / 100%;
}
.header .head{
    position: absolute;
    top: -94rpx;
    right: 0;
    left: -64rpx;
    margin: auto;
    width:128rpx;
    height:128rpx;
	background-color: #fff;
	box-shadow: 0px 5px 5px 0px 
		rgba(0, 0, 0, 0.1);
    border-radius: 50%;
    overflow: hidden;
}
.header .img{
    width: 100%;
    height: 100%;
}

.title{
    margin-top: 46rpx;
    font-size:28rpx;
    color: #333;
}

.icon-start{
    position: absolute;
    top: 50%;
    left: 12rpx;
    margin-top: -14rpx;
    width: 28rpx;
    height: 28rpx;
}

.btn-box{
    margin-top: 20rpx;
}
.btn-box .btn{
    position: relative;
    display: inline-block;
    border-radius:4rpx;
    border:2rpx solid #666;
    margin: 0 12rpx;
    font-size: 24rpx;
    color: #333;
    padding: 10rpx 20rpx;
    border-radius: 6rpx;
}
.btn-box .btn:nth-child(2){
    padding-left: 44rpx;
}

.synopsis{
    margin-top: 58rpx;
    font-size: 24rpx;
    color: #333;
    padding: 0 70rpx;
    line-height: 34rpx;
    text-align: left;
}

.line{
    width:680rpx;
    height:2rpx;
    border-top:2rpx solid #EEE;
    margin: auto;
    margin-top: 56rpx; 
}
.icon-license{
    width: 36rpx;
    height: 36rpx;
    padding-right: 14rpx;
    vertical-align:top;
}
.license .top-title{
    text-align: left;
    font-size:28rpx;
    color: #333;
    padding: 0 78rpx;
    padding-top: 33rpx;
}

.image-wrap{
    padding: 0 76rpx;
}
.img-item{
    margin-top: 20rpx;
    width:278rpx;
    height:360rpx;
    margin-right: 40rpx;
}
.img-item:nth-child(2n){
    margin-right: 0;
}