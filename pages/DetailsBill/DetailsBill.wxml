<view class='padding-30'>

  <view class='pd_55_0 center bor_ee'> 
      <view class='f_30'>{{store_name}}</view>
      <view class='f_60 pd_top50bth35'>-{{order_amount}}</view>
      <view class='f_28 c_99'>实付款</view>
  </view>

  <view class='f_30 bor_ee pd_top40'>
      <view class='dis-flex flex-justify pd_btn40'>
          <view class='c_99'>订单金额</view>
          <view>¥{{order_momer}}</view>
      </view>
      <view class='dis-flex flex-justify pd_btn40'>
        <view  class='c_99'>积分优惠</view>
        <view>-{{order_pointscount}}积分</view>
      </view>
      <view class='dis-flex flex-justify pd_btn40'>
        <view  class='c_99'>付款方式</view>
        <view>积分抵扣</view>
      </view>
      <view class='dis-flex flex-justify pd_btn40'>
        <view  class='c_99'>消费类型</view>
        <view wx:if="{{consumptiontype==2}}">商圈消费</view>
        <view wx:if="{{consumptiontype==1}}">门店消费</view>
      </view>
      <view class='dis-flex flex-justify pd_btn40'>
        <view  class='c_99'>积分奖励</view>
        <view>{{orderReward}}积分</view>
      </view>
  </view>

  <view class='f_30 pd_top40'>
    <view class='dis-flex flex-justify pd_btn40'>
        <view  class='c_99'>创建时间</view>
        <view>{{create_time}}</view>
      </view>
  <view class='dis-flex flex-justify pd_btn40'>
        <view  class='c_99'>订单号</view>
        <view>{{order_id}}</view>
      </view>
  </view>

</view>
