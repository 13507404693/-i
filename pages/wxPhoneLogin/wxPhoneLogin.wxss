/* pages/wxPhoneLogin/wxPhoneLogin.wxss */
page{
    background: #FFF;
}

.header{
    text-align: center;
    margin-top: 69rpx;
}
.logo{
    width:150rpx;
    height:150rpx;
    border-radius: 50%;
}
.title{
    font-size:30rpx;
    color: #333;
    margin-top: 29rpx;
}
.login-container{
    padding: 0 30rpx;
    margin-top: 282rpx;
    text-align: center;
}
.login-btn{
    background: #E52E31;
    font-size:34rpx;
    color: #FFF !important;
    border-radius: 45rpx;
    padding: 0 30rpx;
}
.nav-to{
    font-size:28rpx;
    color: #999;
    margin-top: 28rpx;
}
.login-container button[disabled]{
    background: rgba(229, 46, 49, .6) !important;
}


.mask{
    position: fixed;
    top: 0;
    left: 0;
    width: 0;
    height: 0;
    background: rgba(0, 0, 0, .6);
    -webkit-transition: opacity .5s;
    -moz-transition: opacity .5s;
    transition: opacity .5s;
    opacity: 0;
}
.mask.active{
    width: 100%;
    height: 100%;
    opacity: 1;
}
.bindphone-popup{
    position: absolute;
    left:100%;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    width:0;
    height:0;
    background: #FFF;
    z-index: 99;
    border-radius:10rpx;
    opacity: 0;
    -webkit-transition: transform .5s;
    -moz-transition: transform .5s;
    transition: transform .5s;
    transform: scale(1.2);
    overflow: hidden;
    
}
.bindphone-popup.active{
    width:598rpx;
    height:380rpx;
    transform: scale(1);
    opacity: 1;
    left:0;
}
.form-item{
    position: relative;
}
.icon-phone{
    position: absolute;
    top: 50%;
    left: 49rpx;
    width:28rpx;
    height:28rpx;
    line-height: 28rpx;
    margin-top: -32rpx;
}
.phone-input{
    display: block;
    box-sizing: border-box;
    padding-left: 78rpx;
    font-size:28rpx;
    color: #999;
    background: #F0F0F0;
    border-radius:5rpx;
    width:538rpx;
    height:72rpx;
    margin: auto;
    margin-top: 49rpx;
}
.bindphone-popup .title{
    text-align: center;
    font-size: 30rpx;
    color: #333;
    margin-top: 39rpx;
}
.bindphone-popup .tips{
    font-size:22rpx;
    color: #999;
    padding-left: 30rpx;
    margin-top: 14rpx;
}
.next{
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    margin: 0 15rpx;
    border: none;
    border-top: 2rpx solid #E6E6E6;
    background: none;
    font-size: 28rpx;
    color: #333;
    padding: 0;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 0;
}
