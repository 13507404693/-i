page{
  background: #fff;
}
.pay-container{
  border-top:2rpx solid #F0F0F0;
}
.header{
  text-align: center;
  margin-top: 84rpx;
}
.head{
  width:110rpx;
  height:110rpx;
  border-radius: 50%;
}
.store-name{
  font-size:34rpx;
  color: #333;
  margin-top: 28rpx;
}

.icon-check{
  width: 29rpx;
  height: 29rpx;
  border-radius: 50%;
  position: relative;
  top: 4rpx;
}
.icon-awrow{
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 4rpx;
  margin-left: 8rpx;
}
.form-wrap{
  margin: 104rpx 30rpx 0;
  box-shadow: 0 0 8rpx rgba(75, 75, 75, .4); 
  border-radius:5rpx;
}

.form-tabs .tab-item{
  width:50%;
  height:85rpx;
  line-height:85rpx;
  text-align: center;
  color: #999;
  background: rgba(0, 0, 0, .1);
  border-radius:5rpx 0 30rpx 0;
  box-shadow:0 4rpx 10rpx rgba(0, 0, 0, 0.1) inset;
}
.form-tabs .tab-item .icon-check{
  display: none;
}
.form-tabs .tab-item.active{
  background: #fff;
  box-shadow: none;
  color: #E52E31;
}
.form-tabs .tab-item:nth-child(2){
   border-radius:0 5rpx 0 30rpx;
}
.form-tabs .tab-item.active .icon-check{
  display: inline-block;
}
.form-item{
  margin: 0 34rpx;
  padding: 34rpx 0;
  border-bottom: 2rpx solid #F0F0F0;
  position: relative;
  padding-left: 156rpx;
  font-size:26rpx;
  color: #333;
}
.form-item:nth-last-child(1){
  border: none;
}
.form-item .form-label{
   position: absolute;
    top:50%;
    left:50%;
    width:100%;
    transform:translate(-50%,-50%);
}
.form-item .form-val{
  text-align: right;
}
.form-item.sum-item{
  margin-top: 25rpx;
  padding:0;
  margin-right:0;
}
.form-item.sum-item .form-input{
  text-align: right;
  font-weight: 700;
  font-size:30rpx;
  padding:34rpx 0;
  padding-right:34rpx;
}
.form-item.sum-item .form-label{
  font-size: 30rpx;
}

.real-price{
  font-weight: 700;
  font-size: 50rpx;
  max-width: 466rpx;
  overflow: auto;
}

.submit{
  position: absolute;
  bottom: 78.5rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 690rpx;
  border-radius:5rpx;
  background: #E52E31 !important;
  color: #fff;
  font-size:30rpx;
  height:90rpx;
  line-height:90rpx !important;
  padding: 0;
}
.tips{
  position: absolute;
  bottom: 32.5rpx;
  width: 100%;
  text-align: center;
  font-size:26rpx;
  color: #E52E31;
}
.tips.disabled{
  opacity: .5;
}
.submit[disabled]:not([type]){
  opacity: .5;
  color: #fff !important;
}
.toShop-btn{
  bottom:206rpx;
}


.popup-wrap{
  margin-top: 24rpx;
  height: 640rpx;
}
.picker-item .label,.picker-item .val{
  font-size:26rpx;
  color: #333;
}
.picker-item .label{
  margin-right: 53rpx;
}
.picker-input{
  font-size:26rpx;
  color: #999;
}
.picker-input-item{
  position: relative;
  margin-top: 40rpx;
  border-bottom: 2rpx solid #F0F0F0;
}
.picker-input-item .label{
  position: absolute;
  top:50%;
  transform:translate(0,-50%);
}
.picker-input-item .picker-input{
  width: 100%;
  box-sizing: border-box;
  padding-left: 156rpx;
}
.popup-wrap .confirm{
  position: absolute;
  bottom: 31rpx;
  left: 0;
  right: 0;
  margin: auto;
  width: 309rpx;
  border-radius:50rpx;
  background: #E52E31 !important;
  color: #fff;
  font-size:28rpx;
  height:70rpx;
  line-height:70rpx !important;
  padding: 0;
}