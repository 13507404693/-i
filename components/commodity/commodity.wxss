.padding-30{padding:30rpx;
padding-bottom:0;
padding-top:0;
}


.goods-item{
    margin-top: 22rpx;
}

.goods-item .goods-img{
    background-color: #bebebe;
	box-shadow: 0px 5px 13px 0px 
		rgba(0, 0, 0, 0.35);
    border-radius: 5px;
    overflow: hidden;
    position: relative;
}
.goods-item .goods-img .img{
    width:100%;
    height:430rpx;
    display:block;
    margin:auto;

}
.goods-item .goods-title{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
	border-radius: 5px;
    font-size: 30rpx;
	line-height: 36rpx;
	letter-spacing: 2rpx;
    color: #ffffff;
    padding: 18rpx 0;
    padding-left: 25rpx;

}
.goods-item .goods-price{
    margin-top: 32rpx;
    line-height: 36rpx;
	letter-spacing: 2rpx;
}