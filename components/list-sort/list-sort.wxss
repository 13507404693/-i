/* components/list-sort.wxss */
.position_fixed{
    position: fixed;
    left: 0;
    top: 0;
}

.sort-wrap {
    top:88rpx;
    width: 100%;
    background:#fff;
    text-align: center;
    z-index: 2;
}
.sort-wrap .sort-list{
    margin: 0 34rpx;
    border-bottom: 2rpx solid #ccc;
}
.sort-wrap .sort-item{
    display: inline-block;
    padding: 26rpx 78rpx 16rpx;
    font-size:24rpx;
    color: #333;
    position: relative;
}
.sort-wrap .sort-item:last-child::after{
    content: '';
    display: none;
}
.sort-wrap .sort-item::after{
    content: '';
    position: absolute;
    top: 50%;
    right: 0;
    width: 2rpx;
    height:26rpx;
    margin-top: -8rpx;
    background: #999;
}
.sort-wrap .sort-item.active{
    color: #E52E31;
}
.sort-wrap .sort-item.active::before{
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -13rpx;
    width:26rpx;
    height:5rpx;
    background:rgba(229,46,49,1);
}